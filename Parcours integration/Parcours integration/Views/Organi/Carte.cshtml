@{
    ViewBag.Title = "Plan";
}
<div class="row">
    <div class="col-md-6">
        <h2>Plan des lieux</h2>
    </div>
</div>
<hr />

<ul class="nav nav-tabs" style="margin:0px 20px -1px 10px; width:98%" id="myTab" role="tablist">
    <li class="nav-item" role="presentation">
        <button class="nav-link active" data-bs-toggle="tab" data-bs-target="#home" type="button" role="tab" aria-controls="home" aria-selected="true"><span style="font-weight: bold">Etage Sud</span></button>
    </li>
    <li class="nav-item" role="presentation">
        <button class="nav-link" data-bs-toggle="tab" data-bs-target="#profile" type="button" role="tab" aria-controls="profile" aria-selected="false"><span style="font-weight: bold">Rez-de-chaussée</span></button>
    </li>
</ul>
<div class="tab-content" id="myTabContent">
    <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
        <div class="h-100 bg-light border rounded-1" style="padding:16px">
            <div class="row">
                <div class="col-md-12">
                    <img src="~/Docs/Plan/EtageSud.png" id="plan1" class="picture" />
                </div>
            </div>
        </div>
    </div>
    <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">
        <div class="h-100 bg-light border rounded-1" style="padding:16px">
            <div class="row">
                <div class="col-md-12">
                    <img src="~/Docs/Plan/RDC.png" id="plan0" class="picture" />
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .picture {
        max-width: 100%
    }
</style>