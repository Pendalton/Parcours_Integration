@model Parcours_integration.Models.Plan

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>
<hr />
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <table>
            <tbody>
                <tr style="height:50px">
                    <td class="text-center" style="width:150px">
                        Type de salle :
                    </td>
                    <td style="width:300px">
                        @Html.DropDownList("Types", null, "-- Type de salle --", htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Type_de_salle, "", new { @class = "text-danger" })
                    </td>
                </tr>
                <tr style="height:50px">
                    <td class="text-center" style="width:150px">
                        Nom de la salle :
                    </td>
                    <td style="width:300px">
                        @Html.EditorFor(model => model.Nom_de_salle, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Nom_de_salle, "", new { @class = "text-danger" })
                    </td>
                </tr>
            </tbody>
        </table>
        <br />
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10" style="margin-left:30px">
                <input type="submit" value="Enregistrer" class="btn btn-primary" />
            </div>
        </div>
    </div>
}
<br />
<div>
    <a href="javascript:history.go(-1)" class="btn btn-mini btn-primary icon-edit bigger-10">Retour</a>
</div>
