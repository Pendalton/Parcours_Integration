@model Parcours_integration.Models.Missions

@{
    ViewBag.Title = "Signer";
}

<h2>Signer</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model=>model.Nom_Mission)
        @Html.HiddenFor(model=>model.Nom_Secteur)
        @Html.HiddenFor(model=>model.Login_Interlocuteur)
        @Html.HiddenFor(model=>model.Date_passage)
        @Html.HiddenFor(model=>model.Passage)
        @Html.HiddenFor(model=>model.ID_Parcours)
        
        <table style="width:800px">
            <tbody>
                <tr style="height:50px">
                    <td class="text-center" style="width:20%">
                        @Html.LabelFor(model => model.Remarque, htmlAttributes: new { @class = "control-label col-md-2" })
                    </td>
                    <td style="width:80%">
                        @Html.TextAreaFor(model => model.Remarque, new { htmlAttributes = new { @class = "form-control" }, style = "width:500px; min-height:150px" })
                        @Html.ValidationMessageFor(model => model.Remarque, "", new { @class = "text-danger" })
                    </td>
                </tr>
            </tbody>
        </table>

        <br />

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10" style="margin-left:30px">
                <input type="submit" value="Enregistrer" class="btn btn-primary" />
            </div>
        </div>
    </div>
}
<br />
<div>
    <a href="javascript:history.go(-1)" class="btn btn-mini btn-primary icon-edit bigger-10">Retour</a>
</div>
