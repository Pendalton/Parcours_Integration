            <thead>
                <tr>
                    <th class="text-center" style="background-color: #efefef; width: 30%">
                        Employé
                    </th>
                    <th class="text-center" style="background-color: #efefef; width: 30%">
                        Contrat
                    </th>
                    <th class="text-center " style="background-color: #efefef; width: 20%">
                        Responsable
                    </th>
