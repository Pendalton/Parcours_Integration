                        <td data-bs-toggle="collapse" href="#@test" style="vertical-align:middle">
                            <span style="font-weight:bold">@item.Poste</span>
                        </td>
                        <td data-bs-toggle="collapse" href="#@test" style="vertical-align:middle">
