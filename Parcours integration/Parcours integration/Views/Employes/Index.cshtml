@model IEnumerable<Parcours_integration.Models.Employes>

@{
    ViewBag.Title = "Liste des interlocuteurs";
}

<h2>Listes des interlocuteurs</h2>

@using (Html.BeginForm())
{
    <div class="form-group" style="position:relative">
        <div class="h-100 p-4 bg-light border rounded-3" style="padding:12px">
            <div class="input-group">
                <input type="text" id="Search" placeholder="Recherche" class="form-control" style="width:230px" />&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
            </div>

            <div style="position:absolute;top:30px;margin-left:330px; line-height:30px">
                Secteur de l'interlocuteur :&nbsp; @Html.DropDownList("secteur", null, "Tous", htmlAttributes: new { @onchange = "this.form.submit()" })
            </div>

            <div style="position:absolute; right:15px;top:25px">
                @if (ViewBag.EstAdmin)
                {
                    <a class="btn btn-primary btn-mini" href="@Url.Action("Create")" role="button">Nouvel interlocuteur</a>
                }
                else
                {
                    <a class="btn btn-primary disabled btn-mini" href="@Url.Action("Create")" role="button">Nouvel interlocuteur</a>
                }
            </div>
        </div>
    </div>
}
<br />
<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="row">
                <table class="table table-striped table-hover table-bordered">
                    <thead>
                        <tr>
                            <th class="text-center" style="width:180px;">
                                Nom
                            </th>
                            <th class="text-center" style="width:180px;">
                                Adresse Mail
                            </th>
                            <th class="text-center" style="width:40px;">
                                Secteur
                            </th>
                            <th class="text-center" style="width:40px;">
                                Admin
                            </th>
                            <th class="text-center" style="width:40px;">
                                Actions
                            </th>
                        </tr>
                    </thead>

                    @foreach (var item in Model)
                    {
                        <tbody>
                            <tr align="center">
                                <td class="align-middle Search">
                                    @Html.DisplayFor(modelItem => item.Nom)
                                </td>
                                <td class="align-middle">
                                    @Html.DisplayFor(modelItem => item.Mail)
                                </td>
                                <td class="align-middle CDITri">
                                    @Html.DisplayFor(modelItem => item.Secteur)
                                </td>
                                <td class="align-middle CDDTri">
                                    @if (item.Intervenant)
                                    {
                                        <a href="#" class="disabled btn btn-success icon-edit bigger-10">OUI</a>
                                    }
                                    else
                                    {
                                        <a href="#" class="disabled btn btn-danger icon-edit bigger-10">NON</a>
                                    }
                                </td>
                                <td class="align-middle">
                                    @if (ViewBag.EstAdmin)
                                    {
                                        <a href="@Url.Action("Edit", new { Login = item.Login })" class="btn btn-primary icon-edit bigger-10">Modifier</a>
                                    }
                                    else
                                    {
                                        <a href="@Url.Action("Edit", new { Login = item.Login })" class="btn btn-primary icon-edit bigger-10 disabled">Modifier</a>
                                    }
                                </td>
                            </tr>
                        </tbody>
                    }
                </table>
            </div>
        </div>
    </div>
</div>

<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script>
    $(document).ready(function () {
        function Contains(text_one, text_two) {
            if (text_one.indexOf(text_two) != -1)
                return true;
        }
        $("#Search").keyup(function () {
            var searchText = $("#Search").val().toLowerCase();
            $(".Search").each(function () {
                if (!Contains($(this).text().toLowerCase(), searchText)) {
                    $(this).parent().hide();
                }
                else {
                    $(this).parent().show();
                }
            });
        });
    });
</script>