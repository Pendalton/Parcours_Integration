@model Parcours_integration.Models.Missions

@{
    ViewBag.Title = "Nouvelle mission";
}

<h2>Nouvelle mission</h2>


@using (Html.BeginForm("Create"))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <input hidden name="ID" value="@ViewBag.ID" />
        <hr />
        <table>
            <tbody>
                <tr style="height:50px">
                    <td class="text-center" style="width:150px">
                        Mission choisie :
                    </td>
                    <td style="width:300px">
                        @Html.DropDownList("ChoixMiss", null, "-- Mission --", htmlAttributes: new { @class = "dropdwn form-control" })
                        @Html.ValidationMessageFor(model => model.Nom_Mission, "", new { @class = "text-danger" })
                    </td>
                </tr>
            </tbody>
        </table>

        <br />
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10" style="margin-left:30px">
                <input type="submit" value="Enregistrer" class="btn btn-primary" />
            </div>
        </div>
    </div>
}
<br />

@using (Html.BeginForm("_NewMission", "Missions", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.Partial("_NewMission", Model)
}

<br />
<div>
    <a href="javascript:history.go(-1)" class="btn btn-mini btn-primary icon-edit bigger-10">Retour</a>
</div>



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}