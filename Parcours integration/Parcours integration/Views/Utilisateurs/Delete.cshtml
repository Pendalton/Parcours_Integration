@model Parcours_integration.Models.Utilisateurs

@{
    ViewBag.Title = "Supprimer l'interlocuteur";
}

<h3>Êtes-vous sûr de vouloir supprimer cet interlocuteur?</h3>
<div>
    <hr />
    <div class="row">
        <div class="col-md-9">
            <table style="margin-left:30px">
                <tbody>
                    <tr style="height:50px">
                        <td class="text-center" style="width:160px; font-weight:bold">
                            @Html.DisplayNameFor(model => model.Login) :
                        </td>
                        <td style="width:500px">
                            @Html.DisplayFor(model => model.Login)
                        </td>
                    </tr>

                    <tr style="height:50px">
                        <td class="text-center" style="font-weight:bold">
                            @Html.DisplayNameFor(model => model.Nom) :
                        </td>
                        <td>
                            @Html.DisplayFor(model => model.Nom)
                        </td>
                    </tr>

                    <tr style="height:50px">
                        <td class="text-center" style="font-weight:bold">
                            Service(s) :
                        </td>
                        <td>
                            @foreach (var serv in ViewBag.Services)
                            {
                                <button type="button" class="btn btn-sm btn-outline-dark disabled" style="width: auto; margin: 2px; opacity: 1">@serv.Service.Nom</button>
                            }
                        </td>
                    </tr>

                    <tr style="height:50px">
                        <td class="text-center" style="font-weight:bold">
                            Mail :
                        </td>
                        <td>
                            @Html.DisplayFor(model => model.UserMail)
                        </td>
                    </tr>

                    <tr style="height:50px">
                        <td class="text-center" style="font-weight:bold">
                            Admin :
                        </td>
                        <td>
                            @if (Model.EstAdmin == true)
                            {
                                <button type="button" class="disabled btn btn-success" style="width: 75px; opacity: 1">OUI</button>
                            }
                            else
                            {
                                <button type="button" class="disabled btn btn-danger" style="width: 75px; opacity: 1">NON</button>
                            }
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>

        <div class="col-md-3">
            @if (Model.Photo != null)
            {
                var base64 = Convert.ToBase64String(Model.Photo);
                var imgSrc = String.Format("data:image/gif;base64,{0}", base64);
                <img src="@imgSrc" class="picture" style="margin-bottom:10px; max-width:50%" />
            }
            else
            {
                <img src="~/Docs/person-icon.png" class="picture" style="margin-bottom:10px;max-width:50%" />
            }
        </div>
    </div>
</div>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <br />

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10" style="margin-left:30px">
            <input type="submit" value="Supprimer" class="btn btn-danger" />
        </div>
    </div>
}

<br />
<div>
    <a href="javascript:history.go(-1)" class="btn btn-mini btn-primary icon-edit bigger-10">Retour</a>
</div>

<style>
    .picture {
        max-width: 80%
    }
</style>