@model Parcours_integration.Models.Parcours

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-control">
        <br />

        <div class="row">
            <div class="col-md-4">@Html.EditorFor(model => model.Nom, new { htmlAttributes = new { @class = "form-control", placeholder = "NOM", required = "required" } })</div>
            <div class="col-md-4">@Html.EditorFor(model => model.Prénom, new { htmlAttributes = new { @class = "form-control", placeholder = "Prénom", required = "required" } })</div>
            <div class="col-md-4">@Html.DropDownList("ID_Employé", null, "--- Compte informatique de l'employé ---", htmlAttributes: new { @class = "ID_Employé form-control" })</div>
        </div>

        <br />

        <div class="row">
            <div class="col-md-4">@Html.DropDownList("Type_Contrat", null, "--- Type de contrat ---", htmlAttributes: new { @class = "form-control dropdwn", required = "required" })</div>
            <div class="col-md-4">@Html.EditorFor(model => model.Poste, new { htmlAttributes = new { @class = "form-control", placeholder = "Poste occupé", required = "required" } })</div>
            <div class="col-md-4">@Html.DropDownList("ID_Resp", null, "--- Responsable ---", htmlAttributes: new { @class = "ID_Resp form-control", required = "required" })</div>
        </div>

        <br />

        <div class="row" style="align-items:center">
            <div class="col-md-4">@Html.DropDownList("EquipeID", null, "--- Équipe ---", htmlAttributes: new { @class = "form-control dropdwn", required = "required" })</div>
            <div class="col-md-4">@Html.EditorFor(model => model.Date_entrée, new { htmlAttributes = new { id = "toto", @class = "form-control", type = "date" } })</div>
        </div>

        <br />
        @Html.HiddenFor(model=>model.Complété)
        @Html.Hidden("Dossier", ViewData["Dossier"])
        @Html.Hidden("OldResp", (object)ViewBag.Resp)
        <br />

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10" style="margin-left:30px">
                <input type="submit" value="Enregistrer" class="btn btn-success" />
            </div>
        </div>
    </div>
}
<br />
<div>
    <a href="javascript:history.go(-1)" class="btn btn-mini btn-primary icon-edit bigger-10">Retour</a>
</div>

<script>
    $(function () {
        $('#toto').datetimepicker({
            format: "dd/MM/yyyy",
            weekStart: 1,
            todayBtn: "linked",
            clearBtn: true,
            language: "fr"
        });
    });

    $(".ID_Resp").select2({
        placeholder: "--- Responsable ---",
    });
    $(".ID_Employé").select2({
        placeholder: "--- Responsable ---",
    });
</script>

<style>
    .select2-container .select2-selection--single {
        height: 38px;
    }

    .select2-container--default .select2-selection--single .select2-selection__rendered {
        padding-top: 5px;
    }

    .select2-container--default .select2-selection--single .select2-selection__arrow {
        top: 6px;
    }
</style>