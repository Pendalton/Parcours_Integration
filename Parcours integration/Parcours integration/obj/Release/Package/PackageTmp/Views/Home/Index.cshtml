@model Parcours_integration.Controllers.HomeController.TempParc

@{
    ViewBag.Title = "Menu principal";
}


<div class="row">
    <div class="col-md-4">

        <div class="h-60 p-2 bg-light border rounded-3 colonne" style="border-bottom-left-radius: 0 !important; border-bottom-right-radius: 0 !important">

            <h3>@Model.Nom @Model.Prénom</h3>
            <p style="font-size:14px">
                Responsable : @Model.Responsable<br />
                @Model.Contrat - @Model.Poste - @Model.Equipe<br />
                Parcours débuté le : @Model.Date<br />
            </p>

        </div>

        <div class="h-60 p-2 bg-light border rounded-3 colonne" style="border-top-right-radius: 0 !important; border-top-left-radius: 0 !important">

            <h2>Services à visiter</h2>
            <ul style="font-size:16px">
                @foreach (var item in ViewBag.Services)
                {
                    <li>@item</li>
                }
            </ul>
            <a class="btn btn-outline-primary" href="@Url.Action("Carte","Organi")">Plan de l'usine &raquo;</a>
        </div>
    </div>


    <div class="col-md-8" style="border-left:1px solid black">
        <h2>Liste de formations en cours</h2>
        <table class="table table-bordered" style="border: 0 solid #bdbdbd; margin-bottom: 0px">
            <thead>
                <tr>
                    <th class="text-center" style="background-color: #ffffff;">Nom de l'étape</th>
                    <th class="text-center" style="background-color: #ffffff;">Service</th>
                    <th class="text-center" style="background-color: #ffffff; width:15%">Statut</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var mission in ViewBag.ListMiss)
                {
                    <tr align="center">
                        <td>
                            @mission.Nom_Mission
                        </td>
                        <td>
                            @mission.Nom_Secteur
                        </td>
                        <td>
                            @if (mission.Passage)
                            {
                                <button type="button" disabled class="btn btn-success" style="opacity: 1">Complétée</button>
                            }
                            else
                            {
                                <button type="button" disabled class="btn btn-danger" style="opacity: 1">En cours</button>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<style>
    .colonne {
        display: flex;
        flex-direction: column;
        justify-content: space-between;
    }
</style>