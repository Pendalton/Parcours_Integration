@model IEnumerable<Parcours_integration.Models.Missions>

<table class="table table-bordered table-hover table-responsive" style="border-color: #bdbdbd">
    <thead>
        <tr>
            <th class="text-center" style="background-color: #efefef; width: 26%">
                Mission
            </th>
            <th class="text-center" style="background-color: #efefef; width: 15%">
                Service
            </th>
            <th class="text-center" style="background-color: #efefef; width: 19%">
                Interlocuteur
            </th>
            <th class="text-center" style="background-color: #efefef; width: 12%">
                Mission faite?
            </th>
            <th class="text-center" style="background-color: #efefef; width: 13%">
                Date de passage
            </th>
            <th class="text-center" style="background-color: #efefef; width: 15%">Actions</th>
        </tr>
    </thead>

   @foreach (var item in Model)
    {
        <tr align="center">
            <td data-toggle="tooltip" data-placement="bottom" title="@Html.DisplayFor(modelItem => item.Remarque)">
                @Html.DisplayFor(modelItem => item.Nom_Mission)
            </td>
            <td data-toggle="tooltip" data-placement="bottom" title="@Html.DisplayFor(modelItem => item.Remarque)">
                @Html.DisplayFor(modelItem => item.Nom_Secteur)
            </td>
            <td data-toggle="tooltip" data-placement="bottom" title="@Html.DisplayFor(modelItem => item.Remarque)">
                @Html.DisplayFor(modelItem => item.Employes.Nom)
            </td>
            <td data-toggle="tooltip" data-placement="bottom" title="@Html.DisplayFor(modelItem => item.Remarque)">
               @if (ViewBag.EstAdmin)
                {
                    if (item.Passage)
                    {
                        <a class="btn btn-success btn-mini" href="@Url.Action("Compléter", "Missions", new { id = item.ID})" role="button">OUI</a>
                    }
                    else
                    {
                        <a class="btn btn-danger btn-mini" href="@Url.Action("Compléter", "Missions", new { id = item.ID})" role="button">NON</a>
                    }
                }
                else
                {
                    if (item.Passage)
                    {
                        <a class="btn btn-success btn-mini disabled" href="@Url.Action("Compléter", "Missions", new { id = item.ID})" role="button">OUI</a>
                    }
                    else
                    {
                        <a class="btn btn-danger btn-mini disabled" href="@Url.Action("Compléter", "Missions", new { id = item.ID})" role="button">NON</a>
                    }
                }

            </td>
            <td data-toggle="tooltip" data-placement="bottom" title="@Html.DisplayFor(modelItem => item.Remarque)">
                @Html.DisplayFor(modelItem => item.Date_passage)
            </td>
            <td>
                @if (ViewBag.EstAdmin)
                {
                    <a class="btn btn-primary btn-mini" href="@Url.Action("Edit", "Missions", new { id = item.ID })" role="button">Modifier</a>
                }
                else
                {
                    <a class="btn btn-primary btn-mini disabled" href="@Url.Action("Edit", new { id = item.ID })" role="button">Modifier</a>
                }
            </td>
        </tr>
    }
</table>

<script>
    $(function () {
        $('[data-toggle="tooltip"]').tooltip()
    });
</script>