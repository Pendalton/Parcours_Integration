@model Parcours_integration.Models.Modele

@{
    ViewBag.Title = "Modifier le modèle";
}

<h2>Modifier le modèle</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        <table>
            <tbody>
                <tr style="height:50px">
                    <td class="text-center" style="width:130px">
                        @Html.LabelFor(model => model.Nom, htmlAttributes: new { @class = "control-label" })
                    </td>
                    <td style="width:300px">
                        @Html.EditorFor(model => model.Nom, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Nom, "", new { @class = "text-danger" })
                    </td>
                </tr>

                <tr style="height:50px">
                    <td class="text-center" style="width:130px">
                        Service
                    </td>
                    <td>
                        @Html.DropDownList("ServiceID", null, "--Service sélectionné--", htmlAttributes: new { @class = "dropdwn form-control" })
                        @Html.ValidationMessageFor(model => model.ServiceID, "", new { @class = "text-danger" })
                    </td>
                </tr>

                <tr style="height:50px">
                    <td class="text-center" style="width:130px">
                        @Html.LabelFor(model => model.CDI, htmlAttributes: new { @class = "control-label" })
                    </td>
                    <td>
                        @Html.CheckBoxFor(model => model.CDI, new { @checked = "checked", data_toggle = "toggle", data_onstyle = "success", data_on = "OUI", data_off = "NON", data_width = "75", data_offstyle = "danger" })
                    </td>
                </tr>

                <tr style="height:50px">
                    <td class="text-center" style="width:130px">
                        @Html.LabelFor(model => model.CDD, htmlAttributes: new { @class = "control-label" })
                    </td>
                    <td>
                        @Html.CheckBoxFor(model => model.CDD, new { @checked = "checked", data_toggle = "toggle", data_onstyle = "success", data_on = "OUI", data_off = "NON", data_width = "75", data_offstyle = "danger" })
                    </td>
                </tr>

                <tr style="height:50px">
                    <td class="text-center" style="width:130px">
                        @Html.LabelFor(model => model.Stage, htmlAttributes: new { @class = "control-label" })
                    </td>
                    <td>
                        @Html.CheckBoxFor(model => model.Stage, new { @checked = "checked", data_toggle = "toggle", data_onstyle = "success", data_on = "OUI", data_off = "NON", data_width = "75", data_offstyle = "danger" })
                    </td>
                </tr>

                <tr style="height:50px">
                    <td class="text-center" style="width:130px">
                        @Html.LabelFor(model => model.Mutation, htmlAttributes: new { @class = "control-label" })
                    </td>
                    <td>
                        @Html.CheckBoxFor(model => model.Mutation, new { @checked = "checked", data_toggle = "toggle", data_onstyle = "success", data_on = "OUI", data_off = "NON", data_width = "75", data_offstyle = "danger" })
                    </td>
                </tr>

                <tr style="height:50px">
                    <td class="text-center" style="width:130px">
                        @Html.LabelFor(model => model.Intérimaire, htmlAttributes: new { @class = "control-label" })
                    </td>
                    <td>
                        @Html.CheckBoxFor(model => model.Intérimaire, new { @checked = "checked", data_toggle = "toggle", data_onstyle = "success", data_on = "OUI", data_off = "NON", data_width = "75", data_offstyle = "danger" })
                    </td>
                </tr>
            </tbody>
        </table>

        <br />

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10" style="margin-left:30px">
                <input type="submit" value="Enregistrer" class="btn btn-primary" />
            </div>
        </div>
    </div>
}
<br />
<div>
    <a href="@Url.Action("Index")" class="btn btn-mini btn-primary icon-edit bigger-10">Retour</a>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
