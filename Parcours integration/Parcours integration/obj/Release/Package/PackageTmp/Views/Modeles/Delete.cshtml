    <hr />
    <table>
        <tbody>
            <tr style="height:50px">
                <td class="text-center" style="width:160px; font-weight:bold">
                    @Html.DisplayNameFor(model => model.Nom)
                </td>
                <td style="width:300px">
                    @Html.DisplayFor(model => model.Nom)
                </td>
            </tr>

            <tr style="height:50px">
                <td class="text-center" style="width:160px; font-weight:bold">
                    Service
                </td>
                <td>
                    @Html.DisplayFor(model => model.Service.Nom)
                </td>
            </tr>

            <tr style="height:50px">
                <td class="text-center" style="width:160px; font-weight:bold">
                    @Html.DisplayNameFor(model => model.CDI)
                </td>
                <td>
                    @if (Model.CDI == true)
                    {
                        <a href="#" class="disabled btn btn-success" style="width:75px">OUI</a>
                    }
